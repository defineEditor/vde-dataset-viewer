{
    "description": "Dataset-JSON Viewer",
    "keywords": [
        "cdisc",
        "dataset-json"
    ],
    "homepage": "",
    "repository": {
        "type": "git",
        "url": "git@github.com:defineEditor/vde-dataset-viewer.git"
    },
    "license": "MIT",
    "author": {
        "name": "Dmitry Kolosov"
    },
    "email": "support@defineeditor.com",
    "contributors": [],
    "main": "./.erb/dll/main.bundle.dev.js",
    "scripts": {
        "build": "concurrently \"npm run build:main\" \"npm run build:renderer\"",
        "build:dll": "cross-env NODE_ENV=development TS_NODE_TRANSPILE_ONLY=true webpack --config ./.erb/configs/webpack.config.renderer.dev.dll.ts",
        "build:main": "cross-env NODE_ENV=production TS_NODE_TRANSPILE_ONLY=true webpack --config ./.erb/configs/webpack.config.main.prod.ts",
        "build:renderer": "cross-env NODE_ENV=production TS_NODE_TRANSPILE_ONLY=true webpack --config ./.erb/configs/webpack.config.renderer.prod.ts",
        "postinstall": "ts-node .erb/scripts/check-native-dep.js && electron-builder install-app-deps && npm run build:dll",
        "lint": "cross-env NODE_ENV=development eslint . --ext .js,.jsx,.ts,.tsx",
        "lint:fix": "cross-env NODE_ENV=development eslint . --ext .js,.jsx,.ts,.tsx --fix",
        "bp-linux": "npm run build && electron-builder build --linux --publish never && ts-node ./.erb/scripts/moveFiles.ts",
        "package-linux": "electron-builder build --linux --publish never && ts-node ./.erb/scripts/moveFiles.ts",
        "package-win": "electron-builder build --win --x64 --publish never && ts-node ./.erb/scripts/moveFiles.ts",
        "package-mac": "electron-builder build --mac --publish never && ts-node ./.erb/scripts/moveFiles.ts",
        "package-all": "ts-node ./.erb/scripts/clean.js dist && npm run build && npm run package-linux && npm run package-win && npm run build:dll",
        "rebuild": "electron-rebuild --parallel --types prod,dev,optional --module-dir release/app",
        "prestart": "cross-env NODE_ENV=development TS_NODE_TRANSPILE_ONLY=true webpack --config ./.erb/configs/webpack.config.main.dev.ts",
        "start": "ts-node ./.erb/scripts/check-port-in-use.js && npm run prestart && npm run start:renderer",
        "start:main": "concurrently -k \"cross-env NODE_ENV=development TS_NODE_TRANSPILE_ONLY=true webpack --watch --config ./.erb/configs/webpack.config.main.dev.ts\" \"electronmon .\"",
        "start:preload": "cross-env NODE_ENV=development TS_NODE_TRANSPILE_ONLY=true webpack --config ./.erb/configs/webpack.config.preload.dev.ts",
        "start:renderer": "cross-env NODE_ENV=development TS_NODE_TRANSPILE_ONLY=true webpack serve --config ./.erb/configs/webpack.config.renderer.dev.ts",
        "test": "jest"
    },
    "browserslist": [],
    "prettier": {
        "singleQuote": true,
        "overrides": [
            {
                "files": [
                    ".prettierrc",
                    ".eslintrc"
                ],
                "options": {
                    "parser": "json"
                }
            }
        ]
    },
    "jest": {
        "moduleDirectories": [
            "node_modules",
            "release/app/node_modules",
            "src"
        ],
        "moduleFileExtensions": [
            "js",
            "jsx",
            "ts",
            "tsx",
            "json"
        ],
        "moduleNameMapper": {
            "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/.erb/mocks/fileMock.js",
            "\\.(css|less|sass|scss)$": "identity-obj-proxy"
        },
        "setupFiles": [
            "./.erb/scripts/check-build-exists.ts"
        ],
        "setupFilesAfterEnv": [
            "<rootDir>/src/__tests__/setup.ts"
        ],
        "testEnvironment": "jsdom",
        "testEnvironmentOptions": {
            "url": "http://localhost/"
        },
        "testPathIgnorePatterns": [
            "release/app/dist",
            ".erb/dll",
            "<rootDir>/src/__tests__/setup.ts"
        ],
        "transform": {
            "\\.(ts|tsx|js|jsx)$": "ts-jest"
        }
    },
    "dependencies": {
        "@emotion/react": "^11.14.0",
        "@emotion/styled": "^11.14.1",
        "@fontsource/roboto": "^5.1.1",
        "@fontsource/roboto-mono": "^5.1.1",
        "@mui/icons-material": "^7.3.6",
        "@mui/lab": "^7.0.1-beta.20",
        "@mui/material": "^7.3.6",
        "@reduxjs/toolkit": "^2.11.2",
        "@tanstack/react-table": "^8.21.3",
        "@tanstack/react-virtual": "^3.13.13",
        "@toolpad/core": "^0.16.0",
        "diff": "^8.0.2",
        "dompurify": "^3.2.3",
        "electron-debug": "^3.2.0",
        "electron-log": "^4.4.8",
        "electron-updater": "^6.1.4",
        "js-array-filter": "^0.1.6",
        "js-stream-dataset-json": "^0.7.1",
        "parse-define-xml": "^0.1.7",
        "react": "^19.2.3",
        "react-dom": "^19.2.3",
        "react-redux": "^9.2.0",
        "redux": "^5.0.1",
        "xport-js": "^0.3.1"
    },
    "devDependencies": {
        "@electron/rebuild": "^3.3.0",
        "@pmmmwh/react-refresh-webpack-plugin": "^0.5.11",
        "@svgr/webpack": "^8.1.0",
        "@teamsupercell/typings-for-css-modules-loader": "^2.5.2",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.3.1",
        "@types/jest": "^29.5.5",
        "@types/node": "24.5.2",
        "@types/react": "^19.2.7",
        "@types/react-dom": "^19.2.3",
        "@types/react-test-renderer": "^19.1.0",
        "@types/webpack-bundle-analyzer": "^4.6.0",
        "@typescript-eslint/eslint-plugin": "^6.7.0",
        "@typescript-eslint/parser": "^6.7.0",
        "browserslist-config-erb": "^0.0.3",
        "chalk": "^4.1.2",
        "concurrently": "^8.2.1",
        "core-js": "^3.32.2",
        "cross-env": "^7.0.3",
        "css-loader": "^6.8.1",
        "css-minimizer-webpack-plugin": "^5.0.1",
        "detect-port": "^1.5.1",
        "electron": "^34.0.0",
        "electron-builder": "^26.0.12",
        "electron-devtools-installer": "^4.0.0",
        "electronmon": "^2.0.2",
        "eslint": "^8.49.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-erb": "^4.1.0-0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-import-resolver-typescript": "^3.6.0",
        "eslint-import-resolver-webpack": "^0.13.7",
        "eslint-plugin-compat": "^4.2.0",
        "eslint-plugin-import": "^2.28.1",
        "eslint-plugin-jest": "^27.4.0",
        "eslint-plugin-jsx-a11y": "^6.7.1",
        "eslint-plugin-promise": "^6.1.1",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "file-loader": "^6.2.0",
        "html-webpack-plugin": "^5.5.3",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "mini-css-extract-plugin": "^2.7.6",
        "prettier": "^3.0.3",
        "react-refresh": "^0.14.0",
        "react-test-renderer": "^19.2.3",
        "rimraf": "^5.0.1",
        "style-loader": "^4.0.0",
        "terser-webpack-plugin": "^5.3.9",
        "ts-jest": "^29.1.1",
        "ts-loader": "^9.4.4",
        "ts-node": "^10.9.1",
        "tsconfig-paths-webpack-plugin": "^4.1.0",
        "typescript": "^5.2.2",
        "url-loader": "^4.1.1",
        "webpack": "^5.88.2",
        "webpack-bundle-analyzer": "^4.9.1",
        "webpack-cli": "^5.1.4",
        "webpack-dev-server": "^4.15.1",
        "webpack-merge": "^5.9.0"
    },
    "build": {
        "productName": "vde-dataset-viewer",
        "appId": "org.vde.vde-dataset-viewer",
        "asar": true,
        "asarUnpack": "**\\*.{node,dll}",
        "buildDependenciesFromSource": false,
        "npmRebuild": false,
        "files": [
            "dist",
            "node_modules",
            "package.json"
        ],
        "fileAssociations": [
            {
                "ext": "ndjson",
                "name": "NDJSON",
                "description": "Dataset JSON File",
                "role": "Viewer"
            },
            {
                "ext": "dsjc",
                "name": "DSJC",
                "description": "Dataset JSON Compressed File",
                "role": "Viewer"
            },
            {
                "ext": "sas7bdat",
                "name": "SAS7BDAT",
                "description": "SAS Dataset File",
                "role": "Viewer"
            },
            {
                "ext": "xpt",
                "name": "XPT",
                "description": "SAS Transport File",
                "role": "Viewer"
            }
        ],
        "mac": {
            "target": {
                "target": "default",
                "arch": [
                    "arm64",
                    "x64"
                ]
            },
            "type": "distribution",
            "hardenedRuntime": true,
            "entitlements": "assets/entitlements.mac.plist",
            "entitlementsInherit": "assets/entitlements.mac.plist",
            "gatekeeperAssess": false
        },
        "dmg": {
            "contents": [
                {
                    "x": 130,
                    "y": 220
                },
                {
                    "x": 410,
                    "y": 220,
                    "type": "link",
                    "path": "/Applications"
                }
            ]
        },
        "nsis": {
            "artifactName": "${productName}.Setup.${version}.${ext}",
            "allowToChangeInstallationDirectory": true,
            "oneClick": false
        },
        "appImage": {
            "artifactName": "${productName}.${version}.${ext}"
        },
        "win": {
            "target": [
                "nsis",
                "portable"
            ],
            "publish": {
                "provider": "github",
                "owner": "defineEditor",
                "repo": "vde-dataset-viewer"
            }
        },
        "linux": {
            "target": [
                "AppImage"
            ],
            "category": "Viewer"
        },
        "directories": {
            "app": "release/app",
            "buildResources": "assets",
            "output": "release/build"
        },
        "extraResources": [
            "./assets/**"
        ],
        "publish": {
            "provider": "github",
            "owner": "defineEditor",
            "repo": "vde-dataset-viewer"
        }
    },
    "engines": {
        "node": ">=14.x",
        "npm": ">=7.x"
    },
    "electronmon": {
        "patterns": [
            "!**/**",
            "src/main/**",
            ".erb/dll/**"
        ],
        "logLevel": "quiet"
    }
}
